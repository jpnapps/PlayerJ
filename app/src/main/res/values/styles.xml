    <!-- Base application theme. -->

    <style name="NOCOLOR_MatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>

    </style>

    <!-- MatchParent dimensions style -->
    <style name="ViewMatchParent" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- WrapContent dimensions style -->
    <style name="ViewWrapContent" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Sectional design style -->
    <style name="ViewSection" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Sectional design style for height-->
    <style name="ViewColumn" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- Contraint design style -->
    <style name="ConstraintSection" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <!-- Contraint design style with height wrapcontent -->
    <style name="ConstraintHeightWrapSection" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--Personal Information-->
    <style name="ViewSection.WithPadding">
        <item name="android:paddingStart">@dimen/_20sdp</item>
        <item name="android:paddingEnd">@dimen/_20sdp</item>
    </style>

    <!-- Contact us card liner layout style -->
    <style name="ViewSection.ContactUsCardViewStyle">


        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Toolbar left header view style -->
    <style name="ViewWrapContent.ToolbarTextViewLeft">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/app_white_txt</item>
        <item name="android:fontFamily">@font/sofia_pro_semi_bold</item>
